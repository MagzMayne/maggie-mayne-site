function showDomain(n) {
    const d = domains[n];
    const p = document.getElementById('infoPanel');
    let o = '';
    if (d.offerings && d.offerings.length > 0) {
        o = '<div class="panel-offerings"><h4>Offerings</h4>';
        d.offerings.forEach(x => {
            o += '<div class="offering-item">';
            o += '<span class="offering-name">' + x.name + '</span>';
            o += '<span class="offering-price">' + x.price + '</span>';
            o += '<a href="' + x.link + '" class="offering-btn' + (x.amazon ? ' amazon' : '') + '" target="_blank">' + (x.amazon ? 'Amazon' : 'Book') + '</a>';
            o += '</div>';
        });
        o += '</div>';
    }
    document.getElementById('panelContent').innerHTML = 
        '<div class="panel-header">' +
            '<div class="panel-emoji">' + d.emoji + '</div>' +
            '<div class="panel-title">Domain ' + n + ': ' + d.name + '</div>' +
            '<div class="panel-archetype">' + d.archetype + '</div>' +
            '<div class="panel-meta">' +
                '<span>' + d.element + '</span>' +
                (d.zodiac !== '‚Äî' ? '<span>' + d.zodiac + '</span>' : '') +
            '</div>' +
        '</div>' +
        '<p class="panel-description">' + d.description + '</p>' + o;
    p.classList.add('active');
}

function closePanel() {
    document.getElementById('infoPanel').classList.remove('active');
}

document.addEventListener('click', function(e) {
    const p = document.getElementById('infoPanel');
    if (p.classList.contains('active') && !p.contains(e.target) && !e.target.closest('.domain-group')) {
        closePanel();
    }
});
</script>

</body>
</html>
